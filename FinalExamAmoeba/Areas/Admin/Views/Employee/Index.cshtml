@using Core.Models
@model List<Employee>

@{
    int counter = 1;
}

<div class="container">
    <div class="row">
        <div class="row">
            <a asp-action="Create" asp-controller="Employee" class="btn btn-outline-primary">Create</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Field</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>

                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(counter++)</th>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Field</td>
                        <td><img src="~/uploads/employees/@item.ImageUrl" width="100px" height="100px" /></td>

                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a>
                        </td>

                    </tr>
                }
               
            </tbody>
        </table>
    </div>
</div>